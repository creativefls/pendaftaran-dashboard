$body-font-family = "Ubuntu", "Helvetica Neue", "Helvetica", "Open Sans", "Arial", sans-serif
$color-pack = false

// Import Vuetify styling
@require '~vuetify/src/stylus/main.styl'


.page
  @extend .fade-transition

.v-card
  border-radius 12px
  box-shadow 0 2px 12px 0 rgba(0,0,0,.1)

.menu
  .btn
    text-transform capitalize !important

.cursor-pointer
  cursor pointer
